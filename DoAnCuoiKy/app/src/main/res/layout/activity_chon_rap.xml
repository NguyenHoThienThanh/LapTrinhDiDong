<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChonRapActivity"
    android:background="@drawable/grey_backround">
    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_film"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/blue"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Lật mặt 7"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.constraintlayout.helper.widget.Carousel
        android:id="@+id/crs_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbar_film"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/white_background2">
        <!-- Danh sách ngày -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/crs_poster"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"/>
    </LinearLayout>
    <!-- Danh sách rạp -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_rap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rcv_ngay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/white_background"/>
    <!-- Danh sách suất chiếu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/tv_rapdexuat"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Rạp đề xuất"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="16dp"/>
        <EditText
            android:id="@+id/edit_sl_rap"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="(5)"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:padding="16dp"/>
    </LinearLayout>
    <!-- Danh sách các rạp chiếu phim -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_cgv"
            android:contentDescription="CGV Logo"/>
            <!-- LinearLayout dọc để chứa tên rạp và khoảng cách -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_tenrap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CGV Vincom"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:paddingStart="16dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bạn ở gần rạp này"
                        android:textSize="14sp"
                        android:layout_gravity="center"
                        android:paddingStart="16dp"
                        android:textColor="@android:color/black"/>

                    <EditText
                        android:id="@+id/edt_distance"
                        android:layout_width="72dp"
                        android:layout_height="wrap_content"
                        android:hint="0.7 km"
                        android:gravity="center"
                        android:textSize="10dp"></EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/crv_theater"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/white_background"/>
    </LinearLayout>
</LinearLayout>